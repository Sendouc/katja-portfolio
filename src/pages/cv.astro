---
  import experience from "../data/job-experience.json"
  import education from "../data/education.json"
  import skills from "../data/skills.json"
  import languages from "../data/languages.json"
  import Layout from "../components/Layout.astro"
  import TitledProgress from "../components/TitledProgress.astro"
---

<style>
  .container {
    display: flex;
    justify-content: space-between;
  }

  .sub-container {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .title-container {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-top: 2rem;
    max-width: 36rem;
  }

  .no-break {
    white-space: nowrap;
  }

  b {
    max-width: 32rem;
  }

  .desc {
    margin-top: 0.5rem;
    max-width: 30rem;
  }
</style>

<Layout title="CV" activeLink="cv">
  <div class="container">
    <div class="sub-container">
      <div>
        <h2>Job experience</h2>
        {experience.map(job => (
          <>
            <div class="title-container">
              <b>{job.title}</b>
              <div class="no-break">{job.year}</div>
            </div>
            <div class="desc">{job.desc}</div>
          </>
        ))}
      </div>
      <div>
        <h2>Education</h2>
        {education.map(ed => (
          <>
            <div class="title-container">
              <b>{ed.title}</b>
              <div class="no-break">{ed.year}</div>
            </div>
          </>
        ))}
      </div>
    </div>
    <div class="sub-container">
      <div>
        <h2>Contact</h2>
        <a href="mailto:katjavalentina@gmail.com">katjavalentina@gmail.com</a>
      </div>
      <div>
        <h2>Skills</h2>
        {skills.map(skill => (
          <TitledProgress title={skill.title} progress={skill.progress} />
        ))}
      </div>
      <div>
        <h2>Languages</h2>
        {languages.map(lang => (
          <TitledProgress title={lang.title} progress={lang.progress} />
        ))}
      </div>
    </div>
  </div>
</Layout>
